{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports":true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "typeRoots" : [
            "./@types",
        ]
    },
    "types": [
        "webpack-env",
        "node",
        "vue"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ]
}